extends layout

block content
  // This is jQuery datepicker
  script().
    $(function() {
      $( "#datepicker" ).datepicker({dateFormat: "D, dd M yy", showOn: 'focus', yearRange: "-150:+0", changeYear: true, changeMonth: true});
    });
  div(class="container")
    table(id="backSide")
      tr
        td(id="leftSide") NEW ADDRES
        td(id="rightSide")
          a(href="/contact_list") Back
    br
    form(action="/add_contact",method="post",data-ajax="false",enctype='multipart/form-data')
      label Name
      input(type="text",name="name",placeholder="full name",autofocus)
      label Street address
      input(type="text",name="address",placeholder="Mystreet 1")
      label E-mail address
      input(type="email",name="email",placeholder="your@email.net")
      label Phone number
      input(type="text",name="phonenumber",placeholder="+358(0)551234567")
      label Birthday
      input(type="text",readonly="true",name="birthday",id="datepicker")
      label Notes
      textarea(name="notes",placeholder="additional information")
      label Choose photo
      input(type='file',name='image')
      br
      input(class="widebutton",type="submit",value="SAVE")
    br
    p(class="error") #{error_msg}
    