extends layout

block content
  div(class="container")
    table(id="backSide")
      tr
        td(id="leftSide") LOG IN
        td(id="rightSide")
          a(href="/register_form") New user
    br
    form(action="/login",method="post",data-ajax="false")
      input(type="text",name="username",placeholder="username",autofocus)
      br
      input(type="password",name="password",placeholder="password")
      br
      input(class="widebutton",type="submit",value="LOG IN")
    br
    p(class="error") #{error}
